pipeline {
  agent any
  options {
    buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')
    disableConcurrentBuilds()
  }
  stages {
    stage ('Build (phkbzp)') {
      steps {
        sh script: 'mvn clean ', label: 'dwtu5j'
        sh script: 'mvn test ', label: '6v3qdc'
        sh script: 'mvn install -Dmaven.test.skip=true', label: 'rs0v11'
      } //end steps
    } // end stage Build
    stage ('Deploy (udkjn6)') {
      steps {
        script {
		docker.withTool('docker'){

        
            sh script: '''
docker build -t artifactory.dagility.com/docker/terraform-swathy1-backend2:latest .
''', label: 'bcbeab'
            sh script: '''
docker push artifactory.dagility.com/docker/terraform-swathy1-backend2:latest
''', label: 'ffcaaf'
        		}
	}
script { sh script: 'sleep 0.005', label: 'fmw4o7'}

        sh script: '''
ln -sf /usr/local/bin/helm3 /usr/local/bin/helm
''', label: 'rlklcw'
        sh script: 'helm package chart', label: 'ijhrf0'
        withCredentials([usernamePassword(credentialsId: '', passwordVariable: 'PASS', usernameVariable: 'USER')]) {

        script {
            sh script: '''
curl -u$USER:$PASS -T terraform-swathy1-backend2-chart-0.1.0.tgz 'https://artifactory.dagility.com/artifactory/helm-local/terraform-swathy1-backend2-chart-0.1.0.tgz' 
''', label: 'abfeac'
        } // end step group script
script { sh script: 'sleep 0.005', label: '4j2evm'}
} // end step group
        sh script: 'helm repo add terraform-swathy1-backend2 https://artifactory.dagility.com/artifactory/helm ', label: 'rvsu01'
        sh script: 'helm repo update', label: 'mesfnb'
        sh script: 'helm upgrade terraform-swathy1-backend2-deployment terraform-swathy1-backend2/terraform-swathy1-backend2-chart --install --values chart-values.yaml --namespace argocd --set ingress.hosts[0].host=${project.prefix?lower_case}-${component.code}-${project.environment?lower_case}.${project.properties.domain}', label: 'ixxrui'
      } //end steps
    } // end stage Deploy
  }
}
